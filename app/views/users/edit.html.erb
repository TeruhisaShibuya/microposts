<h1>Edit Information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> <!--エラーメッセージ-->
     
   
   <%= f.label :new_name %>
   <%= f.text_field :name, class: 'form-control' %>
   
   <%= f.label :new_email %>
   <%= f.text_field :email, class: 'form-control' %>
   
   <%= f.label :new_password %>
   <%= f.password_field :password, class: 'form-control' %>
   
   <%= f.label :new_password_confirmation, "Confirmation" %>
   <%= f.password_field :password_confirmation, class: 'form-control' %>
   
   <h1>個人プロフィール編集</h1>
   
   <%= f.label :"年齢" %>
   <%= f.text_field :age, class: 'form-control' %>
   
   <%= f.label :"お住いの地域" %>
   <%= f.text_field :region, class: 'form-control' %>
   
   <%= f.label :"性別" %>
   <%= f.text_field :sex, class: 'form-control' %>
   
   <%= f.label :"趣味" %>
   <%= f.text_field :hobby, class: 'form-control' %>
   
   
   <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
  <% end %>
 </div>
</div>
